@model List<(MovieStore.Models.Domain.ApplicationUser User, string Role)>

<div class="tbl-container">

    <h2>Users</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Name</td>
                <td>@item.User.UserName</td>
                <td>@item.User.Email</td>
                <td>@item.Role</td>
            </tr>
        }
    </table>
</div>