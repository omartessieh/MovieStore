@using Microsoft.AspNetCore.Identity;
@model IdentityRole

<form class="w-40" asp-action="Create" method="post">
    <h2 class="pb-10">Add Role</h2>
    <div class="input-container">
        <label asp-for="Name" class="w-40">Role Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }
    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" asp-action="Index">All records</a>
    </div>
</form>